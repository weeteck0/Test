<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>BuildPC App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">BuildPC App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/addProduct">Add New Product</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Product Details</h2></div>
        <br>
        <% if (product) { %>
            <div>
                <p><b>Product Name:</b><br> <%= product.name %></p>
                <p><b>Product Image:</b><br> <img src="/images/<%= product.image_url %>" width="20%"></p>
                <p><b>Category:</b><br> <%= product.category %></p>
                <p><b>Brand:</b><br> <%= product.brand %></p>
                <p><b>Price:</b><br> $<%= product.price.toFixed(2) %></p>
                <p><b>Stock Quantity:</b><br> 
                    <% if (product.stock_quantity > 0) { %>
                        <span class="text-success"><%= product.stock_quantity %> available</span>
                    <% } else { %>
                        <span class="text-danger">Out of stock</span>
                    <% } %>
                </p>
                <p><b>Description:</b><br> <%= product.description %></p>
                <p><b>Compatibility:</b><br> <%= product.compatibility %></p>
                
                <!-- Keep your BuildPC specific buttons -->
                <div class="mt-3">
                    <% if (product.stock_quantity > 0) { %>
                        <button class="btn btn-success" onclick="addToCart()">Add to Cart</button>
                        <button class="btn btn-primary" onclick="addToBuild()">Add to PC Build</button>
                    <% } %>
                    <a href="/updateProduct/<%= product.id %>" class="btn btn-secondary">Update Product</a>
                </div>
            </div>

            <!-- Related Products section - keeping your functionality -->
            <% if (relatedProducts && relatedProducts.length > 0) { %>
                <hr class="mt-5">
                <h3>Related Products</h3>
                <div class="row">
                    <% for(let i=0; i < relatedProducts.length; i++) { %>
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <img src="/images/<%= relatedProducts[i].image_url %>" 
                                     class="card-img-top" style="height: 150px; object-fit: cover;">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <a href="/product/<%= relatedProducts[i].id %>">
                                            <%= relatedProducts[i].name %>
                                        </a>
                                    </h6>
                                    <p class="text-primary">$<%= relatedProducts[i].price.toFixed(2) %></p>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
        <% } else { %>
            <p>No product found.</p>
        <% } %>
        <a href="/products">Back</a>
    </div>
    
    <script>
        function addToCart() {
            alert('Product added to cart successfully!');
        }
        
        function addToBuild() {
            alert('Product added to PC build successfully!');
        }
    </script>
</body>
</html>
