<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>BuildPC App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">BuildPC App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/addProduct">Add New Product</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <br>
        <div class="text-center"><h2>PC Components from BuildPC App Database</h2></div>
        <br>

        <!-- Search and filter section - keeping your functionality -->
        <div class="row mb-3">
            <div class="col-md-8">
                <h4>Filter Products</h4>
            </div>
            <div class="col-md-4">
                <form method="GET" action="/products">
                    <div class="mb-2">
                        <input type="text" class="form-control" name="search" placeholder="Search products..." 
                               value="<%= (filters && filters.search) ? filters.search : '' %>">
                    </div>
                    <div class="mb-2">
                        <select class="form-control" name="category">
                            <option value="">All Categories</option>
                            <% if (categories && categories.length > 0) { %>
                                <% for(let i=0; i < categories.length; i++) { %>
                                    <option value="<%= categories[i].category %>" 
                                            <%= (filters && filters.category === categories[i].category) ? 'selected' : '' %>>
                                        <%= categories[i].category %>
                                    </option>
                                <% } %>
                            <% } %>
                        </select>
                    </div>
                    <button class="btn btn-primary w-100" type="submit">Filter</button>
                </form>
            </div>
        </div>

        <!-- Product table - supermarket app style structure -->
        <table class="table table-hover small text-center">
            <thead>
                <tr>
                    <th width="150">Product Name</th>
                    <th width="100">Product Image</th>
                    <th width="80">Category</th>
                    <th width="80">Brand</th>
                    <th width="60">Price</th>
                    <th width="60">Stock</th>
                    <th width="50">Edit</th>
                    <th width="50">Delete</th>
                </tr>
            </thead>
            <tbody>
                <% if (!products || products.length === 0) { %>
                    <tr>
                        <td colspan="8" class="text-center">No products found. Try different search terms.</td>
                    </tr>
                <% } else { %>
                    <% for(let i=0; i < products.length; i++) { %>
                        <tr>
                            <td><a href="/product/<%= products[i].id %>"><%= products[i].name %></a></td>
                            <td><img src="/images/<%= products[i].image_url %>" width="60"></td>
                            <td><%= products[i].category %></td>
                            <td><%= products[i].brand %></td>
                            <td>$<%= products[i].price.toFixed(2) %></td>
                            <td>
                                <% if (products[i].stock_quantity > 0) { %>
                                    <span class="text-success"><%= products[i].stock_quantity %></span>
                                <% } else { %>
                                    <span class="text-danger">Out of Stock</span>
                                <% } %>
                            </td>
                            <td>
                                <a href="/updateProduct/<%= products[i].id %>">Edit</a>
                            </td>
                            <td>
                                <a href="/deleteProduct/<%= products[i].id %>" 
                                   onclick="return confirm('Are you sure you want to delete this product?')">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    <% } %>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
